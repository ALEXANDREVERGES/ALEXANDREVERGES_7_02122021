import React, { useEffect, useState } from "react";

function Comment() {
//const [commentaires, setCommentaires] = useState();
const commentaire = [];
const user  = JSON.parse(localStorage.getItem("user")) 
const token = user.token;
useEffect(()=> {
    fetch(`http://localhost:3000/api/get/commentaire`, 
    {
      headers:
      {
        'Content-Type': 'application/json',
        'Authorization': `Bearer ${token}`
      }
    })
    .then ((res) => res.json())  
    .then ((data) => {
      if (data) {
        
        commentaire.push(data);
        console.log("commentaire----->", commentaire)
        getData(commentaire)
      }
      
    }).catch((error) => console.log(error));
   
    
});
function getData(commentaire){
    for(var k = 0; k < commentaire.length; k++)  
       <div class="container_post">
        <div class="structureNom">${commentaire[k].name} ${commentaire[k].prenom}</div>
        <div class="container_structure_post">
          <div class="structurePost">${commentaire[k].commentaire}</div>
          <img class="img_post" src=""/>
          <div class="choice">
          <div><i class="far fa-comment"></i></div>
          <div><i class="far fa-thumbs-up"></i></div>
          <div><i class="far fa-thumbs-down"></i></div>   
         </div>
        </div>
        <button class="btnModif1"><i class="fas fa-pen"></i></button>
      </div>
}
    return(
        <div>
            {getData}
        </div>

    )

} 

export default Comment;
